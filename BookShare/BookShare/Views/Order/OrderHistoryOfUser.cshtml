@foreach (var orders in Model)
{


    if (orders.Status != "pending")
    {
        <h2>@orders.Status</h2>
    }


    <table class="table">
        <tr>
            <th>Cover</th>
            @*<th>Author Name</th>*@
            <th>Book Name</th>
            <th>Seller Name</th>
            <th>Price</th>
            <th>Genre</th>
            <th>Edition</th>
            <th>Language</th>
            <th>Country</th>
            <th>Publisher</th>
            <th>Page</th>

            <th>Shop Number</th>
            <th>Shop Name</th>

            <th>Quantity</th>
            @*<th>Actions</th>*@
        </tr>
        @foreach (var od in orders.orderDetails)
        {
            <tr>
                <td><img style="height: 100px; width: 100px" src="~/Images/@od.Book.Picture" /></td>
                @*<td>@od.Book.AuthorId</td>*@
                <td>@od.Book.Name</td>
                <td>@od.User.Name</td>
                <td>@od.Book.Price</td>
                <td>@od.Book.Category</td>
                <td>@od.Book.Edition</td>

                <td>@od.Book.Language</td>
                <td>@od.Book.Country</td>

                <td>@od.Book.Publisher</td>
                <td>@od.Book.NumberOfPages</td>

                <td>@od.Shop.ShopNumber</td>
                <td>@od.Shop.Name</td>
                <td>@od.Quantity</td>
                @*<td><a class="btn btn-danger" href="/Order/CancleOrder/@od.Id">Cancle</a></td>*@
            </tr>
        }
    </table>
    if (orders.Status == "pending")
    {
        <a class="btn btn-danger" href="/Order/CancleOrder/@orders.Id" style="float:right;"> Cancle Order </a>
        <br />
    }
    <br />
    <br />
}