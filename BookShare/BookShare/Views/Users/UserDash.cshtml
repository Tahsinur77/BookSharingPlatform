@model List<BookShare.Models.Entities.BookDetailBookShopUserModel>
@{
    ViewBag.Title = "UserDash";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@*<head>
    <link href="@Url.Content("~/ExternalCSS/Card.css")" rel="stylesheet" type="text/css" />
</head>*@

<h2>UserDash</h2>

<p>Welcome to User Dashboard</p>

@if (TempData["error"] != null)
{
    <span class="label-danger">@TempData["error"]</span>
    <br />
}

<a class="btn btn-success" href="/Sellers/SellerRegistration">Registration as seller</a>

<a class="btn btn-danger" href="/Login/Logout">Log Out</a>

<br /><br />

<a class="btn btn-success" href="/Users/Edit/@Session["userId"]">Update</a>
<a class="btn btn-primary" href="/Users/AddCart">Cart</a>
<a class="btn btn-success" href="/Order/OrderHistoryOfUser">Order History</a>

<br />

@*<div id="myDIV">*@


<div class="container-fluid d-flex justify-content-center">
    <div class="row mt-5">

        @foreach (var list in Model)
        {
            @*<div class="item1">*@
            @*<div class="colomn">*@


            <div class="col">
                <a href="/Users/BookDetails/@list.Book.Id">

                    <div class="card" style="height: 550px; width: 300px">
                        <img src="~/Images/@list.Book.Picture" style="height: 350px;width: 250px; margin-left: 25px;" class="card-img-top" alt="...">
                        <div class="card-body" style="height: 150px; width: 200px; margin-left: 15px">
                            <h3 class="card-title">@list.Book.Name</h3>
                            <h5 class="card-text">@list.Book.Author.Name (@list.Book.Edition Edition)</h5>
                            <h4>@list.Book.Price</h4>

                        </div>
                    </div>

                </a>
                @*</div>*@
                <a href="/Users/AddingProcess/@list.BookId" class="btn btn-success">Add to Cart</a>

            </div>


        }
    </div>
</div>

