@model List<BookShare.Models.Entities.AuthorModel>
@{
    ViewBag.Title = "Authorlist";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}


<a class="btn btn-primary" href="/Author/CreateAuthor">New Author</a>

<h2>Authorlist</h2>

<table class="table">
    <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Email</th>
        <th>Details</th>
    </tr>
    @foreach(var list in Model)
    {
        <tr>
            <td><img style="height:50px;width:50px" src="~/Images/@list.Picture" /></td>
            <td>@list.Name</td>
            <td>@list.Email</td>
            <td>@list.Details</td>

        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <h3>Nothing Found</h3>
}