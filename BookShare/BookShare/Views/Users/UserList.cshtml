@model List<BookShare.Models.Entities.UserModel>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>UserList</h2>

<table class="table">

    <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Role</th>
        <th>Action</th>
    </tr>

    @foreach (var list in Model)
    {
        <tr>
            <td><img style="height:50px;width:50px" src="~/Images/@list.Picture" /></td>
            <td>@list.Name</td>
            <td>@list.Email</td>
            <td>@list.Phone</td>
            <td>@list.Address</td>
            <td>@list.Role</td>
            <td>
                <a class="btn btn-danger" href="/Users/Edit/@list.Id">Edit</a>
                <a class="btn btn-success" href="/Users/Delete/@list.Id">Delete</a>
            </td>
        </tr>
    }

</table>