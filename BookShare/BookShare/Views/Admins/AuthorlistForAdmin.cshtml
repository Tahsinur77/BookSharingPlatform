@model List<BookShare.Models.Entities.AuthorModel>
@{
    ViewBag.Title = "AuthorlistForAdmin";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>AuthorlistForAdmin</h2>


<table class="table">
    <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Email</th>
        <th>Details</th>
        <th>Action</th>
    </tr>
    @foreach (var list in Model)
    {
        <tr>
            <td><img style="height:50px;width:50px" src="~/Images/@list.Picture" /></td>
            <td>@list.Name</td>
            <td>@list.Email</td>
            <td>@list.Details</td>
            <td>
                <a class="btn btn-success" href="">Edit</a>
                <a class="btn btn-danger" href="/Admins/AuthorDelete/@list.Id">Delete</a>

            </td>

        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <h3>Nothing Found</h3>
}