@model List<BookShare.Models.Entities.OrderOrderDetailsModel>
@{
    ViewBag.Title = "OrderHistoryOfUser";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>OrderHistoryOfUser</h2>

